.flash-box
  .wrapper 
    .chat-side
      = render 'shared/side_bar'
    .chat-main
      .main-header
        .main-header__left-box
          %h2.main-header__left-box__group-name{"data-group_id" => "#{@group.id}"} #{@group.name}
          %ul.main-header__left-box__member-list
            Memberï¼š
            - @group.users.each do|user|
              %li.main-header__left-box__member-list__member #{user.name}
        = link_to edit_group_path(@group) do
          .main-header__edit-btn Edit
      .messages
        = render @messages
      .form
        = form_for [@group, @message] do |f|
          = f.text_field :content, class: 'form__message', id: 'new_message', placeholder: 'type a message'
          .form__mask
            = f.label :image , id: 'd-image' do
              = fa_icon 'picture-o', class: 'fa-image'
              = f.file_field :image, class: 'hidden'
          = f.submit 'Send', class: 'form__submit'



 